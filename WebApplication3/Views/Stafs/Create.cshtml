@model restSakei.Models.Staf

@{
    ViewData["Title"] = "Create";
}

<div class="container bg-light mt-5">
    <h1 class="text-danger font-weight-bold font-monospace text-center">Add Staff Member</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="font-weight-bold text-danger font-monospace">Name:</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContactNumber" class="font-weight-bold text-danger font-monospace">Contact Number:</label>
            <input asp-for="ContactNumber" class="form-control" required />
            <span asp-validation-for="ContactNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Salary" class="font-weight-bold text-danger font-monospace">Salary:</label>
            <input asp-for="Salary" class="form-control" required />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HiringDate" class="font-weight-bold text-danger font-monospace">Hiring Date:</label>
            <input asp-for="HiringDate" class="form-control" required />
            <span asp-validation-for="HiringDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Position" class="font-weight-bold text-danger font-monospace">Position:</label>
            <input asp-for="Position" class="form-control" required />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <div class="col-md-12 mt-0 text-center">
            <button type="submit" class="btn btn-danger mb-3">Create</button>
        </div>

    </form>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
