@model WebApplication3.Models.Products

@{
    ViewData["Title"] = "Edit";
}
<div class="menuEdit mb-5">
    <h1>Edit Product</h1>

    <form asp-action="Edit" asp-controller="Products" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Discription"></label>
            <textarea asp-for="Discription" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control"></select>
        </div>

        <div class="form-group">
            <label asp-for="ImageFile"></label>
            <input type="file" asp-for="ImageFile" class="form-control-file" />
        </div>

        <div class="form-group">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control" readonly />
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>

